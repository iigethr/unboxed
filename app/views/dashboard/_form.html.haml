/* Form */

.separator.small
= form_tag dashboard_index_path, method: "get", class: "altai-center", autocomplete: :off do
  %fieldset
    .field-row
      .field
        .input.pg-12
          = text_field_tag :login, nil, class: "search", placeholder: "Insert username", required: true
    .field-row
      .field
        .submit
          = submit_tag t("dashboard.form.submit"), name: nil, data: { disable_with: t("dashboard.form.processing") }, class: "button double-extra-large purple wide pg-16"
