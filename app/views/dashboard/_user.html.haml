/* User */

.separator.small
.user.altai-center
  .user-box
    .separator.small.glow
    .user-item
      .user-left
        = user_avatar(user)
      .user-right
        .user-inner
          %p.left.auto
            %strong= user.login
            = image_tag "icons/favorite.png"
            %strong= user.favorite_language
          // Last Checked
          // %p.small.right.auto
          //   %strong Last Checked:
          //   dd-mm-yyyy
          //   \::
          //   = link_to "Check again", "#"
        .user-inner
          %p.small.left.gray-500-cl= user.bio
    .separator.small.glow
    .user-item
      = link_to "[Clear & Search Again]", root_path, class: "link small altai-center"
